<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Smart Reward</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Smart Reward", "Index", "Home")</p>
            </div>

            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                        <li>@Html.ActionLink("A propos", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        @if (!Request.IsAuthenticated && Request.RequestContext.RouteData.Values["controller"].ToString().Equals("Home"))
                        {
                            <li>@Html.ActionLink("Connexion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })</li>
                        }
                        else if (Request.IsAuthenticated)
                        {
                            <li id="notificationCount"></li>
                            <li>@Html.ActionLink("Se déconnecter", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "logoffButton", @class = "btn btn-default" })</li>
                        }
                    </ul>

                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Smart Reward</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/sr")
    <script src="/Scripts/bootstrap.min.js"></script>

    @if (Request.IsAuthenticated)
    {
        <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
        <!--Reference the SignalR library. -->
        <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>
        if (!Request.RequestContext.RouteData.Values["controller"].ToString().Equals("Dashboard"))
        {
            <script src="~/Scripts/SmartReward/Notifications/GeneralNotification.js"></script>
        }
    }
    @RenderSection("scripts", required: false)
</body>
</html>
