@model BindingViewModel

<div id="searchResult">

    <div class="pagedList" data-target="#searchResult">
        @Html.PagedListPager(Model.result, page => Url.Action("Index", new {page }),
        PagedListRenderOptions.MinimalWithPageCountText)
    </div>

    <ul id="results">
        @foreach (var item in Model.result)
        {
            <li>
                <div class="row">
                    <div class="col-md-2">
                        @Html.GravatarImage(item.Email, 80, GravatarHtmlHelper.DefaultImage.Identicon)
                    </div>
                        <div class="col-md-7">
                            <h3>@Html.DisplayFor(model => item.Email)</h3>
                        </div>
                        <div class="col-md-3 buttonParent">
                            @Html.ActionLink("Inviter", "BindingChild", "Binding", routeValues: new { targetId = item.UserId }, htmlAttributes: new { id = "add" + item.UserId, @class = "btn btn-primary" })
                        </div>
                    </div>
            </li>
        }
    </ul>
    <div class="pagedList" data-target="#searchResult">
        @Html.PagedListPager(Model.result, page => Url.Action("Index", new { page }),
        PagedListRenderOptions.MinimalWithPageCountText)
    </div>
</div>